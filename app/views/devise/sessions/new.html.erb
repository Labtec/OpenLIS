<%= form_for(resource, as: resource_name, url: session_path(resource_name),
             enforce_utf8: false, html: { novalidate: true }) do |f| %>
  <div class="username">
    <%= f.label :username, t('user_sessions.new.username') %>
    <%= f.email_field :username, 'aria-label' => t('user_sessions.new.username'), autofocus: true %>
  </div>

  <div class="password">
    <%= f.label :password, t('user_sessions.new.password') %>
    <%= f.password_field :password, 'aria-label' => t('user_sessions.new.password'), autocomplete: 'off' %>
  </div>

  <%= f.submit t('user_sessions.new.submit'), class: 'submit' %>
<% end %>
