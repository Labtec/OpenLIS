<% title t('.title') %>

<%= turbo_stream_from :patient %>

<div class="title_tools">
  <%= link_to t('.order_tests'), new_patient_accession_path(@patient) %>
</div>
<div class="title"><%= full_name(@patient) %></div>

<div class="list">
  <div class="log">
    <% if @accessions.blank? %>
      <%= t('.no_requisitions_yet') %><br/>
      <% if @patient %>
        <%= link_to t('.order_tests'), new_patient_accession_path(@patient) %>
      <% end %>
    <% else %>
      <ul>
        <% if current_user.admin? %>
          <%= render partial: 'accessions/admin_accession', collection: @accessions, as: :accession %>
        <% else %>
          <%= render @accessions %>
        <% end %>
      </ul>

      <%= paginate @accessions %>
    <% end %>
  </div>
</div>
