<% cache [I18n.locale, patient] do %>
  <li class="contact">
    <%= avatar_icon(patient) %>

    <div class="tools">
      <small>
        <%= link_to t('.edit'), edit_patient_path(patient) %>
        <% if current_user.admin? %> |
          <%= link_to t('.delete?'), patient, method: :delete, data: { confirm: t('.confirm_destroy') } %>
        <% end %>
      </small>
    </div>

    <%= link_to full_name(patient), patient_path(patient) %>
    <tt><%= patient.identifier %></tt>
    <dt class="second">
      <% if patient.email.present? %>
        <%= mail_to patient.email %> |
      <% end %>
      <% if patient.cellular.present? %>
        <%= t('.cellular') %> <b><%= format_phone_number(patient.cellular) %></b> |
      <% end %>
      <% if patient.phone.present? %>
        <%= t('.phone') %> <b><%= format_phone_number(patient.phone) %></b> |
      <% end %>
      <%= age(patient.birthdate) %>
    </dt>
  </li>
<% end %>
