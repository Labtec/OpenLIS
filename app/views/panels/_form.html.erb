<h2><%= t('.order_panels') %></h2>

<%= content_tag :div, class: 'panels', data: { panel_ids: @panels.map(&:id) } do %>
  <%= form.collection_check_boxes(:panel_ids, @panels, :id, :name_with_description) do |builder| %>
    <%= content_tag :div, class: 'panel', id: "panel_#{builder.object.id}", data: { lab_test_ids: builder.object.lab_test_ids } do %>
      <%= builder.check_box %>
      <label class="checkbox" for="accession_panel_ids_<%= builder.object.id %>"><%= sanitize(builder.text) %></label>
    <% end %>
  <% end %>
<% end %>
