<!DOCTYPE html>
<html lang="<%= set_user_language %>">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="initial-scale=1">
    <%= csrf_meta_tags %>
    <title><%= t('.title') %></title>

    <%= stylesheet_link_tag 'login', media: 'all' %>
  </head>
  <body class="login">
    <div id="login">
      <h1><%= link_to "MasterLab", "http://www.labtecsa.com" %></h1>
      <% if alert.present? %>
      <div class="errors">
        <strong>ERROR:</strong>
        <%= alert %>
      </div>
      <% elsif notice.present? %>
      <div class="alerts">
        <%= notice %>
      </div>
      <% end %>
      <%= yield %>
    </div>

    <%= javascript_include_tag 'login' %>
  </body>
</html>
