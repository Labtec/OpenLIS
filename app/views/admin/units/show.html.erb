<% title 'Unit' %>

<%= turbo_stream_from [:admin, :unit] %>

<%= turbo_frame_tag :unit %>

<p>
  <strong>Expression:</strong>
  <%= @unit.expression %>
</p>

<p>
  <strong>UCUM:</strong>
  <%= @unit.ucum %>
</p>

<p>
  <strong>SI:</strong>
  <%= @unit.si %>
</p>

<p>
  <strong>Conversion Factor:</strong>
  <%= @unit.conversion_factor %>
</p>

<p>
  <%= link_to 'Edit', edit_admin_unit_path(@unit) %> |
  <%= link_to 'Destroy', [:admin, @unit], data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %> |
  <%= link_to 'View All', admin_units_path %>
</p>
