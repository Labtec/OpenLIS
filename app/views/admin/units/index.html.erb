<% title 'Units' %>

<table>
  <tr>
    <th>Name</th>
  </tr>
  <% @units.each do |unit| %>
    <tr>
      <td><%= unit.name %></td>
      <td><%= link_to 'Show', [:admin, unit] %></td>
      <td><%= link_to 'Edit', edit_admin_unit_path(unit) %></td>
      <td>
        <%= link_to 'Destroy', [:admin, unit], method: :delete,
          data: { confirm: 'Are you sure?' } %>
      </td>
    </tr>
  <% end %>
</table>

<p><%= link_to 'Unit', new_admin_unit_path %></p>
