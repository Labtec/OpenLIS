<%= content_tag :tr, id: dom_id(lab_test_value), is: 'turbo-frame', class: 'admin_lab_test_value' do %>
  <td><%= sanitize(lab_test_value.value) %></td>
  <td><%= lab_test_value.flag %></td>
  <td><%= loinc_answer_hyperlink(lab_test_value.loinc) %></td>
  <td><%= snomed_hyperlink(lab_test_value.snomed) %></td>
  <td><%= 'Yes' if lab_test_value.numeric? %></td>
  <td><%= sanitize(lab_test_value.note) %></td>
  <td><%= link_to 'Edit', edit_admin_lab_test_value_path(lab_test_value) %></td>
  <td>
    <%= link_to 'Delete', [:admin, lab_test_value], data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %>
  </td>
<% end %>
