<% title 'Lab Test Values' %>

<table>
  <tr>
    <th>Value</th>
    <th>Flag</th>
    <th>LOINC</th>
    <th>SNOMED CT</th>
    <th>Numeric</th>
    <th>Note</th>
  </tr>
  <% @lab_test_values.each do |lab_test_value| %>
    <tr>
      <td><%= sanitize(lab_test_value.value) %></td>
      <td><%= lab_test_value.flag %></td>
      <td><%= lab_test_value.loinc %></td>
      <td><%= snomed_hyperlink(lab_test_value.snomed) %></td>
      <td><%= 'Num' if lab_test_value.numeric? %></td>
      <td><%= sanitize(lab_test_value.note) %></td>
      <td><%= link_to 'Show', [:admin, lab_test_value] %></td>
      <td><%= link_to 'Edit', edit_admin_lab_test_value_path(lab_test_value) %></td>
      <td>
        <%= link_to 'Destroy', [:admin, lab_test_value], method: :delete,
          data: { confirm: 'Are you sure?' } %>
      </td>
    </tr>
  <% end %>
</table>

<p><%= link_to 'New Lab Test Value', new_admin_lab_test_value_path %></p>
