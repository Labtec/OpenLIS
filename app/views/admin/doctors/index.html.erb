<% title "Doctors" %>

<h3>If you erase a Doctor, all its requisitions will be gone!</h3>

<table>
  <tr>
    <th>Name</th>
  </tr>
  <% for doctor in @doctors %>
    <tr>
      <td><%=h doctor.name %></td>
      <td><%= link_to "Show", [:admin, doctor] %></td>
      <td><%= link_to "Edit", edit_admin_doctor_path(doctor) %></td>
      <td><%= link_to "Destroy", [:admin, doctor], :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Doctor", new_admin_doctor_path %></p>
