<% title 'Doctor' %>

<%= turbo_stream_from [:admin, :doctor] %>

<%= turbo_frame_tag :doctor %>

<p>
  <strong>Name:</strong>
  <%= @doctor.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @doctor.email %>
</p>

<p>
  <%= link_to 'Edit', edit_admin_doctor_path(@doctor) %> |
  <% if @doctor.accessions_count.zero? %>
    <%= link_to 'Destroy', [:admin, @doctor], data: { turbo_method: :delete, turbo_confirm: "If you erase a Doctor, all its requisitions will be gone!\nAre you sure?" } %> |
  <% end %>
  <%= link_to 'View All', admin_doctors_path %>
</p>
