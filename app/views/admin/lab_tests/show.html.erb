<% title 'Lab Test' %>

<p>
  <strong>Department:</strong>
  <%= @lab_test.department_name %>
</p>
<p>
  <strong>Code:</strong>
  <%= @lab_test.code %>
</p>
<p>
  <strong>Name:</strong>
  <%= sanitize @lab_test.name %>
</p>
<p>
  <strong>CPT Code:</strong>
  <%= @lab_test.procedure %>
</p>
<p>
  <strong>LOINC:</strong>
  <%= loinc_hyperlink(@lab_test.loinc) %>
</p>
<p>
  <strong>Description:</strong>
  <%= @lab_test.description %>
</p>
<p>
  <strong>Decimals:</strong>
  <%= @lab_test.decimals %>
</p>
<p>
  <strong>Units:</strong>
  <%= unit_expression_for_display(@lab_test.unit) %>
</p>
<p>
  <strong>Also allow Numeric:</strong>
  <%= @lab_test.also_numeric %>
</p>
<p>
  <strong>Is Ratio:</strong>
  <%= @lab_test.ratio %>
</p>
<p>
  <strong>Is Range:</strong>
  <%= @lab_test.range %>
</p>
<p>
  <strong>Is Fraction:</strong>
  <%= @lab_test.fraction %>
</p>
<p>
  <strong>Text Length:</strong>
  <%= @lab_test.text_length %>
</p>
<p>
  <strong>Lab Test Values:</strong>
  <ul>
  <% for lab_test_value in @lab_test.lab_test_values %>
    <li>
      <%= sanitize(lab_test_value.value) %>
      <%= lab_test_value.loinc %>
      <%= snomed_hyperlink(lab_test_value.snomed) if lab_test_value.snomed.present? %>
      <%= "(#{lab_test_value.note})" if lab_test_value.note.present? %>
    </li>
  <% end %>
  </ul>
</p>
<p>
  <strong>Remarks:</strong>
  <%= sanitize @lab_test.remarks %>
</p>

<p>
  <%= link_to 'Edit', edit_admin_lab_test_path(@lab_test) %> |
  <%= link_to 'Destroy', [:admin, @lab_test], method: :delete, data: { confirm: 'Are you sure?' } %> |
  <%= link_to 'View All', admin_lab_tests_path %>
</p>
